{
	"name": "ExtCpp0x",
	"version": "1.1",
	"manifest_version": 2,	
	"description": "__MSG_ext_description__",
	"homepage_url": "http://m4tx.pl/",
	"options_page": "html/options.html",
	"default_locale": "pl",
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
  
	"background": {
		"persistent": true,
		"scripts": ["js/background.js"]
	},
  
	"content_scripts": [
		{
			"matches": [
				"*://cpp0x.pl/*"
			],
			"css": ["style/libextcpp0x.css"],
			"js": ["lib/jquery-1.8.3.js",
			"js/libextcpp0x.js"]
		}
	],

	"permissions": [
		"tabs",
		"clipboardWrite"
	]
}
